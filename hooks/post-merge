#!/bin/bash

# Configuration
BUCKET="devkitassets"
FILE_KEY="devkit.rar"
LOCAL_DESTINATION="devkit.rar"

echo "Checking S3 asset: $FILE_KEY..."

# Use 'aws s3 cp' to download the file directly.
# This uses your 'aws configure' credentials.
aws s3 cp s3://$BUCKET/$FILE_KEY $LOCAL_DESTINATION

if [ $? -eq 0 ]; then
    echo "Successfully downloaded $FILE_KEY to $LOCAL_DESTINATION"
else
    echo "Error: Download failed. Check your internet or AWS permissions."
    exit 1
fi